<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - Nimi Blog</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body { font-family: 'Inter', sans-serif; }
        .bg-gradient-dark { background: linear-gradient(135deg, #1f2937 0%, #111827 100%); }
        .card-dark { background-color: #1f2937; }
        .user-card:hover { border-color: #0ea5e9; transform: translateY(-4px); }
        .social-icon { transition: transform 0.2s, color 0.2s; }
        .social-icon:hover { transform: scale(1.1); }
    </style>
</head>
<body class="bg-gradient-dark min-h-screen antialiased p-8 lg:p-12">

    <!-- Header -->
    <header class="mb-10 flex justify-between items-center max-w-6xl mx-auto">
        <h1 class="text-3xl font-extrabold text-sky-500 flex items-center">
            <i class="fas fa-feather-alt mr-3"></i> Nimi Blog
        </h1>
        <nav>
            <a href="/dashboard" class="text-gray-300 hover:text-sky-500 font-medium transition duration-150 mr-6">
                <i class="fas fa-tachometer-alt mr-1"></i> Dashboard
            </a>
            <a href="/logout" class="text-gray-300 hover:text-red-500 font-medium transition duration-150">
                <i class="fas fa-sign-out-alt mr-1"></i> Log Out
            </a>
        </nav>
    </header>

    <main class="max-w-6xl mx-auto">

        <!-- Search Title -->
        <h2 class="text-4xl font-bold text-white mb-8">
            Search Results for: <span class="text-sky-500">"<%= searchQuery %>"</span>
        </h2>

        <% if (users && users.length > 0) { %>
            <!-- Grid of Users -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                <% users.forEach(function(user) { %>
                    <div class="card-dark rounded-xl p-6 border border-gray-800 hover:shadow-xl transition duration-300 user-card">
                        <div class="flex items-center space-x-4">
                            <img 
                                src="<%= user.profileImage ? user.profileImage : 'https://media.istockphoto.com/id/1446363142/vector/edit-profile-icon-vector-illustration-edit-profile-user-account-avatar-blogger-writer-create.jpg?s=170667a&w=0&k=20&c=NOon-oW4627JZxDxgdSPRZf5yq3fCpBzUYw3B4Volpw=' %>" 
                                alt="<%= user.userName %>'s profile picture" 
                                class="w-16 h-16 rounded-full object-cover border-2 border-sky-600 shadow-lg">
                            <div>
                                <h3 class="text-xl font-semibold text-white"><%= user.userName %></h3>
                                <p class="text-gray-400 text-sm"><%= user.jobTitle || 'Blogger' %></p>
                            </div>
                        </div>

                        <p class="text-gray-400 text-sm mt-4 line-clamp-2">
                            <i class="fas fa-quote-left mr-1 text-sky-500"></i>
                            <%= user.bio || 'No bio available.' %>
                        </p>

                        <div class="flex justify-between items-center mt-6">
                            <a href="/search-profile/<%= user._id %>" 
                               class="text-sky-400 hover:text-sky-300 font-medium flex items-center transition">
                                View Profile <i class="fas fa-arrow-right ml-2"></i>
                            </a>

                            <div class="flex space-x-3 text-gray-400 text-lg">
                                <% if (user.social && user.social.twitterUrl) { %>
                                    <a href="<%= user.social.twitterUrl %>" target="_blank" class="hover:text-sky-400 social-icon"><i class="fab fa-twitter"></i></a>
                                <% } %>
                                <% if (user.social && user.social.linkedinUrl) { %>
                                    <a href="<%= user.social.linkedinUrl %>" target="_blank" class="hover:text-blue-500 social-icon"><i class="fab fa-linkedin"></i></a>
                                <% } %>
                                <% if (user.social && user.social.githubUrl) { %>
                                    <a href="<%= user.social.githubUrl %>" target="_blank" class="hover:text-purple-400 social-icon"><i class="fab fa-github"></i></a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- No Results Found -->
            <div class="text-center py-20">
                <i class="fas fa-search text-5xl text-gray-600 mb-4"></i>
                <h3 class="text-2xl text-gray-300 font-semibold">No results found for "<%= searchQuery %>"</h3>
                <p class="text-gray-500 mt-2">Try searching with a different keyword or username.</p>
            </div>
        <% } %>

    </main>

</body>
</html>
