<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Nimi Blog - Dashboard</title>
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<style>
body { font-family: 'Inter', sans-serif; }
.bg-gradient-dark { background: linear-gradient(135deg, #1f2937 0%, #111827 100%); }
.card-dark { background-color: #1f2937; }
.metric-card { transition: transform 0.3s, box-shadow 0.3s; }
.metric-card:hover { transform: translateY(-5px); box-shadow: 0 15px 25px -5px rgba(0,0,0,0.4); }
.activity-item { border-left: 3px solid transparent; transition: border-left-color 0.2s; }
.activity-item:hover { border-left-color: #0ea5e9; }
</style>
</head>
<body class="bg-gradient-dark min-h-screen antialiased p-4 md:p-12">

<!-- Header -->
<header class="mb-12 max-w-7xl mx-auto flex justify-between items-center">
    <h1 class="text-3xl font-extrabold text-sky-500 flex items-center">
        <i class="fas fa-feather-alt mr-3"></i> Nimi Blog
    </h1>

    <!-- Hamburger & nav -->
    <div class="relative">
        <button id="menu-btn" class="md:hidden text-gray-300 hover:text-sky-500 focus:outline-none">
            <i class="fas fa-bars text-2xl"></i>
        </button>

        <nav id="menu" class="hidden absolute right-0 mt-2 w-52 bg-gray-800 rounded-lg shadow-lg md:flex md:static md:w-auto md:bg-transparent md:shadow-none flex-col md:flex-row md:space-x-6">
            <a href="/" class="block md:inline-block px-4 py-2 md:px-3 md:py-1 text-gray-300 hover:text-sky-500 font-medium transition duration-150">
                <i class="fas fa-home mr-2"></i> Home
            </a>
            <a href="/user/<%= user._id %>/view-all-posts" class="block md:inline-block px-4 py-2 md:px-3 md:py-1 text-gray-300 hover:text-sky-500 font-medium transition duration-150">
                <i class="fas fa-list-alt mr-2"></i> All Posts
            </a>
            <a href="/profile" class="block md:inline-block px-4 py-2 md:px-3 md:py-1 text-white font-medium transition duration-150 border-b-2 border-sky-500 md:border-none">
                <i class="fas fa-user mr-2"></i> Profile
            </a>
            <a href="/profile/edit" class="block md:inline-block px-4 py-2 md:px-3 md:py-1 text-gray-300 hover:text-sky-500 font-medium transition duration-150">
                <i class="fas fa-user-edit mr-2"></i> Edit Profile
            </a>
            <a href="/logout" class="block md:inline-block px-4 py-2 md:px-3 md:py-1 text-gray-300 hover:text-red-500 font-medium transition duration-150">
                <i class="fas fa-sign-out-alt mr-2"></i> Log Out
            </a>
        </nav>
    </div>
</header>


<div class="max-w-7xl mx-auto">

<h2 class="text-4xl font-extrabold text-white tracking-tight mb-8 border-b-4 border-gray-700 inline-block pb-2 text-center md:text-left">
    <i class="fas fa-chart-line mr-3 text-sky-500"></i> User Dashboard
</h2>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-8 justify-center">

    <!-- Sidebar -->
    <div class="lg:col-span-1 card-dark p-6 rounded-xl shadow-2xl h-fit">
                <div class="text-center">
                    <img src="<%= user.profileImage %>" alt="User Avatar" class="w-24 h-24 rounded-full mx-auto mb-4 border-4 border-sky-500 object-cover">
                    <h3 class="text-3xl font-bold text-white mb-1"><%= user.username %></h3>
                    <p class="text-sky-400 mb-4"><%= user.email %></p>
                </div>
                
                <p class="text-gray-400 text-sm mb-6 text-center"><%= user.bio %></p>
                
                <div class="text-sm text-gray-400 space-y-2 border-t border-gray-700 pt-4">
                    <p><i class="fas fa-calendar-alt mr-2 text-sky-500"></i> Joined: <%= user.createdAt ? new Date(user.createdAt).toDateString() : "Date not available" %></p>
                    <p><i class="fas fa-pencil-alt mr-2 text-sky-500"></i> Role: <%= user.jobTitle %></p>
                </div>

                <a href="/profile/edit" class="block mt-6">
                    <button class="mt-6 w-full py-2 bg-sky-600 text-white font-semibold rounded-lg hover:bg-sky-700 transition duration-150">
                    Edit Profile
                    </button>
                </a>
            </div>


    <!-- Main Content -->
    <div class="lg:col-span-3 space-y-8">

        <!-- Metric Cards -->
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-4 justify-items-center">
            <div class="metric-card card-dark p-5 rounded-xl text-center shadow-lg w-full max-w-xs">
                <i class="fas fa-file-alt text-3xl text-sky-500 mb-2"></i>
                <p class="text-3xl font-extrabold text-white"><%= user.posts.length %></p>
                <p class="text-sm text-gray-400">Total Posts</p>
            </div>
            <div class="metric-card card-dark p-5 rounded-xl text-center shadow-lg w-full max-w-xs">
                <i class="fas fa-heart text-3xl text-red-500 mb-2"></i>
                <p class="text-3xl font-extrabold text-white"><%= totalLikes %></p>
                <p class="text-sm text-gray-400">Total Likes</p>
            </div>
            <div class="metric-card card-dark p-5 rounded-xl text-center shadow-lg w-full max-w-xs">
                <i class="fas fa-comments text-3xl text-yellow-500 mb-2"></i>
                <p class="text-3xl font-extrabold text-white"><%= totalComments %></p>
                <p class="text-sm text-gray-400">Total Comments</p>
            </div>
            <div class="metric-card card-dark p-5 rounded-xl text-center shadow-lg w-full max-w-xs">
                <i class="fas fa-user text-3xl text-green-500 mb-2"></i>
                <p class="text-3xl font-extrabold text-white"><%= followersCount %></p>
                <p class="text-sm text-gray-400">Followers</p>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card-dark p-6 rounded-xl shadow-2xl">
            <h3 class="text-2xl font-bold text-white mb-4 border-b border-gray-700 pb-2 text-center md:text-left">
                <i class="fas fa-history mr-2 text-sky-500"></i> Your Recent Activity
            </h3>

            <div class="space-y-3">
                <% user.posts.forEach(post => { %>
                <div class="activity-item flex flex-col sm:flex-row justify-between items-center sm:items-start p-3 rounded-lg bg-gray-800/50">
                    <div class="flex items-center space-x-4 mb-2 sm:mb-0">
                        <i class="fas fa-newspaper text-xl text-sky-400"></i>
                        <div class="text-center sm:text-left">
                            <p class="text-white font-medium hover:text-sky-400 transition duration-150">
                                <a href="/single-blog/<%= post.id %>"><i class="fas fa-link mr-1"></i> <%= post.title %></a>
                            </p>
                            <p class="text-xs text-gray-500">
                                <i class="fas fa-calendar-day mr-1"></i> <%= post.createdAt ? new Date(post.createdAt).toDateString() : "N/A" %>
                            </p>
                        </div>
                    </div>
                    <div class="flex space-x-4 text-sm text-gray-400">
                        
                        <span><i class="fas fa-thumbs-up mr-1"></i> <%= post.likes.length %> Likes</span>
                    </div>
                </div>
                <% }); %>
            </div>

            <a href="/user/<%= user._id %>/view-all-posts" class="mt-4 block text-center text-sm text-sky-500 hover:text-sky-400 font-medium transition duration-150">
                <i class="fas fa-arrow-right mr-1"></i> View All Your Posts
            </a>
        </div>

    </div>
</div>
</div>

<script>
const menuBtn = document.getElementById('menu-btn');
const menu = document.getElementById('menu');
menuBtn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
});
</script>

</body>
</html>
